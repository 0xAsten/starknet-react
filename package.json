{
  "name": "starknet-react",
  "private": true,
  "version": "0.0.0",
  "license": "MIT",
  "workspaces": [
    "packages/*/*"
  ],
  "scripts": {
    "lint": "eslint packages --ext .ts,.tsx",
    "types:check": "tsc --skipLibCheck --noEmit",
    "test": "jest"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "eslint": "^8.8.0",
    "eslint-config-react": "^1.1.7",
    "eslint-config-react-app": "^7.0.0",
    "eslint-config-react-hooks": "^1.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "just": "^0.1.8",
    "lint-staged": "^12.3.3",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.5"
  },
  "engines": {
    "node": ">=12"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "tabWidth": 2,
    "semi": false
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ],
    "plugins": [
      "prettier"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "prettier/prettier": "error"
    }
  },
  "eslintIgnore": [
    "node_modules",
    "dist"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && lint-staged",
      "pre-push": "yarn types:check && yarn bump:check"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --quiet --fix --cache"
  },
  "jest": {
    "roots": [
      "<rootDir>/packages"
    ],
    "testMatch": [
      "**/?(*.)+(test).+(ts|tsx)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  }
}
